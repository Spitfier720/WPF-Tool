<Window x:Class="WPF_Tool.MockNodeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MockNode Editor" Height="500" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Service:"/>
            <TextBox Text="{Binding Service, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Text="Method Name:"/>
            <TextBox Text="{Binding MethodName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Text="Url:"/>
            <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Text="Request Body:"/>
            <TextBox Text="{Binding RequestBody, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" AcceptsReturn="True" Height="60"/>
            <TextBlock Text="Response Body:"/>
            <TextBox Text="{Binding ResponseBody, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8" AcceptsReturn="True" Height="60"/>
            <TextBlock Text="Response Delay (s):"/>
            <TextBox Text="{Binding ResponseDelay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Text="Response Status Code:"/>
            <TextBox Text="{Binding ResponseStatusCode, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
            <TextBlock Text="Description:"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Margin="0,0,10,0" IsDefault="True" Command="{Binding OkCommand}" />
            <Button Content="Cancel" Width="80" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>